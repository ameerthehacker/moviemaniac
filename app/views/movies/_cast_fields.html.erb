<div class="form-group">
    <%= builder.label :role, :class=>'col-md-3 control-label' %>
    <div class="col-md-3">
        <%= builder.select :role, ['Hero', 'Heroin', 'Vilan', 'Supporting Actor'], {}, { :class=>'form-control' } %>
    </div>
    <%= builder.label :actor, :class=>'col-md-1 control-label' %>       
    <div class="col-md-2">
        <%= builder.text_field :actor, :class=>'form-control', :placeholder=>'Eg: ameerthehacker' %>
    </div> 
    <%= builder.label :as, :class=>'col-md-1 control-label' %>       
    <div class="col-md-2">
        <%= builder.text_field :as, :class=>'form-control', :placeholder=>'Eg: Vivek' %>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-2">
        <%= builder.hidden_field :_destroy, :value=>'0' %>
        <a href="" class="btn btn-xs btn-danger btn-remove-cast">Remove</a>        
    </div>
</div>
