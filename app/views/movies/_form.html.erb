<%= render 'shared/errors', :obj=>@movie %>
<%= form_for @movie, :html=>{ :class=>'form-horizontal', :id=>'frm-new-movie' } do |f| %>
    <div class="form-group">
        <%= f.label :title, :class=>'control-label col-md-3' %>
        <div class="col-md-9">
            <%= f.text_field :title, :class=>'form-control', :placeholder=>'Title of the movie' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :concept,:class=>'control-label col-md-3' %>
        <div class="col-md-9">
            <%= f.text_area :concept, :class=>'form-control', :placeholder=>'Description about concept of the movie' %>
        </div>     
    </div>
    <div class="section">
        <div class="form-group">
            <h4 class="text-center">Casts</h4>        
        </div>
    </div>
    <%= render 'cast_fields', :f=>f %>     
    <div class="section">
        <div class="form-group">
            <h4 class="text-center">Teams</h4>        
        </div>
    </div>
    <%= f.fields_for :teams do |builder| %>
        <div class="team">
            <%= render 'team_fields', :builder=>builder %>   
        </div>         
    <% end %>
    <div class="form-group">
        <%= f.label :youtube_link, :class=>'control-label col-md-3' %>
        <div class="col-md-9">
            <%= f.text_field :youtube_link, :class=>'form-control', :placeholder=>'Youtube link to watch the movie' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-3">
            <%= f.submit :class=>'btn btn-lg btn-success' %>
        </div>
    </div>
<% end %>