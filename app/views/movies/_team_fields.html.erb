<div class="form-group">
    <%= builder.label :role, :class=>'col-md-3 control-label' %>
    <div class="col-md-3">
        <%= builder.select :role, ['Director', 'Producer', 'Editor', 'Supporting Actor'], {}, { :class=>'form-control' } %>
    </div>
    <%= builder.label :members, :class=>'col-md-1 control-label' %>       
    <div class="col-md-5">
        <%= builder.text_field :members, :class=>'form-control', :placeholder=>'Eg: ameerthehacker,balavavalu' %>
    </div> 
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-2">
        <%= builder.hidden_field :_destroy, :value=>'0' %>
        <a href="" class="btn btn-xs btn-danger btn-remove-team">Remove</a>        
    </div>
</div>