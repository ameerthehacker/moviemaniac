<div id="errors"></div>
<%= form_for [@movie, @comment], :remote=>true, :html=>{ :class=>'form-horizontal' } do |f| %>
    <div class="form-group">
        <div class="col-md-12">
            <%= f.text_area :comment, :class=>'form-control', :placeholder=>'Your comments for this' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"> 
            <%= f.submit :class=>'btn btn-xs btn-success' %>
        </div>
    </div>
<% end %>